@model BlogManagement.Models.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-box">

    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <h2 class="login-box-msg mb-4"><b>Sign in</b> </h2>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group ">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="input-group ">
                    <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                <br />
                <br />
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <br />
            <div class="social-auth-links text-center mb-3">
                <p>- OR -</p>
                <a href="@Url.Action("FacebookLogin")" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook

                </a>

                <a href="@Url.Action("GoogleLogin")" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i>Sign in using Google+
                </a>
                @*@Html.ActionLink("Sign in using Google", "GoogleLogin", "User")*@
            </div>
            <!-- /.social-auth-links -->

            <p class="mb-1">
                <a href="@Url.Action("Index","Home")">Back to Home</a>
            </p>
            <p class="mb-0">
                <a href="@Url.Action("RegisterAccount","User")" class="text-center">Register a new membership</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>


@section Scripts {


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




